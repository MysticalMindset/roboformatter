{
  "name": "roboformatter",
  "displayName": "roboformatter",
  "description": "Formatter for a bunch of robots in the EngineeringField",
  "version": "1.0.1",
  "author": {
    "name": "Michael McCorkell"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "icon": "images/roboformatter.png",
  "publisher": "MysticalMindset",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MysticalMindset/roboformatter.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Formatters"
  ],
  "keywords": [
    "robot",
    "Fanuc",
    "KUKA",
    "KRL"
  ],
  "main": "src/extension.js",
  "activationEvents": [
    "onLanguage:Fanuc",
    "onLanguage:kukas"
  ],
  "contributes": {
    "languages": [
      {
        "id": "kukas",
        "extensions": [
          ".src",
          ".dat"
        ],
        "aliases": [
          "KUKA Robot language"
        ],
        "configuration": "language_config/kuka.json"
      },
      {
        "id": "Fanuc",
        "extensions": [
          ".LS",
          ".ls"
        ],
        "aliases": [
          "Fanuc Robot language"
        ],
        "configuration": "language_config/fanuc.json"
      }
    ],
    "grammars": [
      {
        "language": "kukas",
        "scopeName": "source.kukas",
        "path": "./syntaxes/kukas.tmLanguage.json"
      },
      {
        "language": "Fanuc",
        "scopeName": "source.fanuc",
        "path": "./syntaxes/fanuc.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[kukas]": {
        "editor.defaultFormatter": "MysticalMindset.roboformatter"
      },
      "[fanuc]": {
        "editor.defaultFormatter": "MysticalMindset.roboformatter"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3"
  }
}
